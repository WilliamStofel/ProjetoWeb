@model UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Usuários</h2>


<div class="row">
    <div class="col-md-4">
        <form action="Salvar" method="post">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            <label for="Id" class="control-label">ID</label>
            @if (ViewBag.Operacao == "I")
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control" />
            }
            else
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Id" class="text-danger"></span>
            <br />

            <label for="Name" class="control-label">Nome</label>
            <input type="text" Name="Name" value="@Model.Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />

            <label for="Email" class="control-label">E-mail</label>
            <input type="email" Name="Email" value="@Model.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />

            <label for="Password" class="control-label">Senha secreta</label>
            <input type="password" Name="Password" value="@Model.Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />

            @*<div class="radio">
                    <label for="IsSeller">
                        Sou Vendedor
                        <input type="radio" name="IsSeller" value="true" checked="@ViewBag.Seller" />
                    </label>
                    <label for="NotSeller">
                        Não Sou Vendedor
                        <input type="radio" name="NotSeller" value="false" checked="@ViewBag.Seller" />
                    </label>
                </div>
                <span asp-validation-for="Seller" class="text-danger"></span>*@

            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>


